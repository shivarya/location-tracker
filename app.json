{
  "expo": {
    "name": "SpeedTrack",
    "slug": "location-speed-tracker",
    "version": "1.0.6",
    "description": "Real-time GPS tracking app with live speed monitoring, route recording, and comprehensive session analytics. Track your speed, location, altitude with metric/imperial units support.",
    "githubUrl": "https://github.com/shivarya/location-tracker",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "locationspeedtracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.shivarya.locationspeedtracker",
      "versionCode": 9,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true,
          "locationAlwaysAndWhenInUsePermission": "Allow SpeedTrack to track your location in the background for accurate route recording while the screen is off."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4e39a9a4-0b3f-45bc-91e8-3926e4c7ba6d"
      }
    }
  }
}
